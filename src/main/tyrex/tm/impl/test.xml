      <jar>jconnect_5.2.jar</jar>
      <class>tyrex.resource.jdbc.xa.EnabledDataSource</class>
      <config>
        <driverClassName>com.sybase.jdbc2.jdbc.SybDriver</driverClassName>
        <driverName>jdbc:sybase:Tds:arkin:4100</driverName>
