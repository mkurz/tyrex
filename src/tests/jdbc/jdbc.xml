<jdbc name="DB Test">
    <performance>
        (onephasecommit value=1600 relative=true/>
        <twophasecommit value=800 relative=true/>
        <rollback value=1600 relative=true/>
    </performance>
    <config class="jdbc.CloudscapeDataSourceFactory"
            description="Cloudscape 1" 
            canReuseDelistedXAResources=false
            userName="system"
            password="manager"
            numberOfTables=1>
        <parameter key="name" value="cloudscapename1"/>
    </config>
                
    <config class="jdbc.CloudscapeDataSourceFactory"
            description="Cloudscape 2" 
            canReuseDelistedXAResources=false
            userName="system"
            password="manager"
            numberOfTables=1>
        <parameter key="name" value="cloudscapename2"/>
    </config>
    
    <config class="jdbc.PostgresDataSourceFactory"
            description="Postgres" 
            canReuseDelistedXAResources=false
            canTestPerformance=false
            userName="username"
            password="password"
            numberOfTables=1>
        <parameter key="name" value="name"/>
        <parameter key="server" value="server"/>
        <parameter key="port" value="port"/>
    </config>
    
    <config class="jdbc.OracleDataSourceFactory"
            description="Oracle" 
            canReuseDelistedXAResources=false
            canTestPerformance=true
            userName="username"
            password="password"
            numberOfTables=1>
        <parameter key="name" value="name"/>
        <parameter key="server" value="server"/>
        <parameter key="port" value="port"/>
        <parameter key="driver" value="thin"/>
    </config>
    
</jdbc>
    
